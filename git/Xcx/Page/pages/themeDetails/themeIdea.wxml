<form bindsubmit="formSubmit" bindreset="formReset">
	<view class="page">
		<view class="weui-form">
			<view class="weui-form__text-area">
				<h2 class="weui-form__title">{{model.Name}}</h2>
			</view>
			<view class="weui-form__control-area">
				<view class="weui-cells__group weui-cells__group_form">
					<view class="weui-cells">
						<view class="weui-cell weui-cell_active">
							<view class="weui-cell__hd"><label class="weui-label">观点1</label></view>
							<view class="weui-cell__bd">
								<textarea class="weui-textarea" name="Idea0" value="{{model.Idea0}}" placeholder="请输入观点1" placeholder-class="weui-input__placeholder" />
							</view>
						</view>
						<view class="weui-cell weui-cell_active">
							<view class="weui-cell__hd"><label class="weui-label">观点2</label></view>
							<view class="weui-cell__bd">
								<textarea class="weui-textarea" name="Idea1" value="{{model.Idea1}}" placeholder="请输入观点2" placeholder-class="weui-input__placeholder" />
							</view>
						</view>
						<view class="weui-cell weui-cell_active">
							<view class="weui-cell__hd"><label class="weui-label">观点3</label></view>
							<view class="weui-cell__bd">
								<textarea class="weui-textarea" name="Idea2" value="{{model.Idea2}}" placeholder="请输入观点3" placeholder-class="weui-input__placeholder" />
							</view>
						</view>
					</view>
				</view>
			</view>
			<view class="weui-form__opr-area">
				<button class="weui-btn weui-btn_primary" formType="submit">确定</button>
			</view>
		</view>
	</view>
</form>